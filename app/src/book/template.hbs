<div class="content-wrap">
    <div class="container" >
        <div class="col s12 m7">
            <div class="card horizontal">
                <div class="row">
                    <div class="col m4">
                        <div class="book-detail-img">
                            <img class="materialboxed object-fit-cover" src="{{model.imgurl}}"> 
                        </div>
                        <div class="book-status">
                            {{#if model.isAvailable}}
                            <span class="success-icon"><i class="material-icons">check_circle</i><p>Available</p></span>
                            {{else}}
                            <span class="unsucess-icon"><i class="material-icons">close</i><p>Unavailable</p></span>
                            {{/if}} 
                        </div>
                    </div>
                    <div class="col m8">    
                        <div class="card-stacked book-details">
                            <div class="card-content">
                                <!--book details-->
                                <h4>{{model.name}}</h4>
                                <span style="color: #26a69a">by {{model.author}}</span><br><br>
                                <p>{{model.description}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Trigger -->
            {{!-- <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Status</a> --}}
            {{#if model.isAvailable}}
                {{#unless (eq userSession.user.id model.user.id)}}
                    {{md-btn text='Request' action='modalfire'}}
                    
                    {{#if modalIsOpen}}
                        {{#md-modal action="closeModal" }}
                                <div class="modal-content">
                                    <div class="col m3">
                                        <h4>Book Request</h4>
                                        {{input id="requestDay" type="number" class="validate" value=defDays}}
                                        <label for="requestDay">Enter Days</label>
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <a class="modal-action modal-close waves-effect waves-green btn-flat"
                                    {{action 'agree' model}}>
                                    Apply
                                </a>
                                <a class="modal-action modal-close waves-effect waves-green btn-flat"
                                    {{action 'closeModal'}}>
                                    Cancel
                                </a>
                            </div>
                        {{/md-modal}}
                    {{/if}}
                {{/unless}}
            {{/if}}
        </div>
    </div>
</div>