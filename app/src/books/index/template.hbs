<div class="container">
    {{#if resultText}}
        <h4> {{resultText}} </h4>
        <div class="divider"></div>
    {{/if}}

    <!--Options-->
    {{#if filterOpen}}
        <div class="search-filters">
            {{#md-card-panel}}
                <div class="row">
                    <div class="col s6">
                        {{md-input value=filterName label='Book Title' action='performSearch' class="col s12" validate=true}}
                    </div>
                    <div class="col s6">
                        {{md-input value=filterAuthor label='Author' action='performSearch' class="col s12" validate=true}}
                    </div>
                    <div class="col s12 text-right">
                        <a class="btn" {{action 'toggleFilter'}}>
                            <i class="material-icons left">close</i> Close
                        </a>
                        <a class="btn" onclick={{perform queryBooks true}}>
                            <i class="material-icons left">search</i> Search
                        </a>
                    </div>
                </div>
            {{/md-card-panel}}
        </div>
    {{/if}}
    <div class="search-options">
        <div class="row">
            <div class="col m6">
                {{material-sort 
                    fields=sortFields 
                    onSort='handleSort'
                    sortField=sort
                    direction=dir
                }}
            </div>
            <div class="col m6 text-right">
                <a class="btn indigo" {{action 'toggleFilter'}}>
                    <i class="material-icons left">filter_list</i> Filter
                </a>
            </div>
        </div>
    </div>
    <!--/Options-->

    <div class="row margin-top-2">
        {{#if queryBooks.isRunning}}
            {{loader-stretch message="Loading Books"}}
        {{else}}
            {{#each model as |book|}}
                <div class="col s12 m6">
                    {{book-card-wide book=book}}
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>